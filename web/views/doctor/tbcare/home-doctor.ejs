<%- include('../../includes/head.ejs') %>
</head>
<body>
   <div class="wrapper">
      <%- include('../../includes/navigations-tbcare.ejs') %>
      <div id="content-page" class="content-page">
         <%- include('../../includes/top-navbar.ejs') %>
         <div class="container-fluid">
            <div class="row">
               <div class="col-sm-12">
                  <div class="iq-card">
                     <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                           <h4 class="card-title">TBCare Patient List</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                           <a href="/sub_1/add-patient" class="btn btn-primary">Add New Patient</a>
                        </div>
                     </div>
                     <div class="iq-card-body">
                        <div class="table-responsive">
                           <table class="table table-striped table-bordered">
                              <thead>
                                 <tr>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>Email</th>
                                    <th>City</th>
                                    <th>Action</th>
                                 </tr>
                              </thead>
                              <tbody>
                                 <% if(pasient.length > 0) { %>
                                    <% pasient.forEach(p => { %>
                                       <tr>
                                          <td><%= p.fullName.first %> <%= p.fullName.last %></td>
                                          <td><%= p.mobileNumber1 %></td>
                                          <td><%= p.email %></td>
                                          <td><%= p.city %></td>
                                          <td>
                                             <div class="flex align-items-center list-user-action">
                                                <a class="iq-bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="View" href="#"><i class="ri-eye-line"></i></a>
                                             </div>
                                          </td>
                                       </tr>
                                    <% }) %>
                                 <% } else { %>
                                    <tr>
                                       <td colspan="5" class="text-center">No patients found.</td>
                                    </tr>
                                 <% } %>
                              </tbody>
                           </table>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <%- include('../../includes/footer.ejs') %>
         </div>
   </div>
   <script>
      // Untuk menandai menu navigasi yang aktif
      document.getElementById("home").classList.add("active");
   </script>
   <%- include('../../includes/end.ejs') %>