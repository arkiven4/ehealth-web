<%- include('../../includes/head.ejs') %>
<%- include('../../includes/navigations-tbcare.ejs') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Prediksi Audio Batuk</h4>
                    </div>
                </div>
                <div class="card-body">
                    <p>Unggah file audio (.wav, .mp3, .ogg) untuk memprediksi apakah terindikasi TB.</p>
                    
                    <form action="/tbcare/predict" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label for="audioFile">File Audio:</label>
                            <input type="file" class="form-control-file" id="audioFile" name="audiofile" accept=".wav,.mp3,.ogg" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Prediksi</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <% if (hasResult) { %>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Hasil Prediksi</h4>
                    </div>
                    <div class="card-body">
                        <h3 class="card-text">Prediksi: 
                            <span class="font-weight-bold <%= predictionResult === 'TB' ? 'text-danger' : 'text-success' %>">
                                <%= predictionResult %>
                            </span>
                        </h3>
                        <p>
                            Detail: <%= predictionDetail.tb_segments %> segmen terdeteksi TB, 
                            <%= predictionDetail.non_tb_segments %> segmen terdeteksi NON-TB 
                            dari total <%= predictionDetail.total_segments %> segmen batuk yang valid.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Visualisasi Waveform</h4>
                    </div>
                    <div class="card-body">
                        <div id="waveform-visualization"></div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Visualisasi MFCC (Mel-Frequency Cepstral Coefficients)</h4>
                    </div>
                    <div class="card-body">
                        <div id="mfcc-visualization"></div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Gunakan <%- %> untuk memasukkan data JSON tanpa di-escape HTML
                const waveData = <%- waveform %>;
                const mfccData = <%- mfcc %>;

                // 1. Gambar grafik Waveform
                const waveLayout = {
                    title: 'Amplitudo Audio',
                    xaxis: { title: 'Sampel (waktu)' },
                    yaxis: { title: 'Amplitudo' }
                };
                Plotly.newPlot('waveform-visualization', [{ y: waveData, type: 'line' }], waveLayout);

                // 2. Gambar Heatmap MFCC
                const mfccLayout = {
                    title: 'Heatmap MFCC',
                    xaxis: { title: 'Frame Waktu' },
                    yaxis: { title: 'Koefisien MFCC' }
                };
                Plotly.newPlot('mfcc-visualization', [{
                    z: mfccData,
                    type: 'heatmap',
                    colorscale: 'Jet'
                }], mfccLayout);
            });
        </script>
    <% } %>
    
    <% if (errorMessage) { %>
        <div class="alert alert-danger" role="alert">
            <div class="iq-alert-icon">
                <i class="ri-information-line"></i>
            </div>
            <div class="iq-alert-text"><%= errorMessage %></div>
        </div>
    <% } %>
</div>

<%- include('../../includes/footer.ejs') %>
<%- include('../../includes/end.ejs') %>